@using Dulich.Domain.Models
@model Menu
@{
    var msg = ViewData["SuccessMessage"] != null ? ViewData["SuccessMessage"] : null;
    var a = ViewData["linkSubmit"];
}
<div class="row">
    <div class="col-lg-12">

        <div class="card">
            <div class="card-header">
                <h3>@ViewData["Title"]</h3>
            </div>
            <div class="card-body">
                <form id="myForm" asp-action="Create" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label>Name</label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger" />
                    </div>

                    <div class="form-group">
                        <label>Url</label>
                        <input asp-for="Url" class="form-control" />
                        <span asp-validation-for="Url" class="text-danger" />
                    </div>
                    <div class="form-group">
                        <label>icon</label>
                        <input asp-for="Icon" class="form-control" />
                        <span asp-validation-for="Icon" class="text-danger" />
                    </div>
                    <div class="form-group">
                        <label>IDParent</label>
                        <input asp-for="IDParent" type="number" class="form-control" />
                    </div>
                    <button class="btn btn-primary quickUpdate" type="submit">Lưu</button>
                </form>
            </div>
        </div>
        <div class="card-footer">
             <a asp-action="index">Quay lại</a>
        </div>
    </div>
</div>
