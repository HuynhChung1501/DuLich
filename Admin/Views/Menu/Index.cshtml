@using Dulich.Application.ViewModels
@using X.PagedList
@using X.PagedList.Mvc.Core;
@model X.PagedList.IPagedList<VMMenu>

<div class="row">
    <div class="col-12">

        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Danh sách quản lý menu</h3>
                <div class="card-tools">
                    <a asp-controller="Menu" asp-action="Create" class="btn btn-tool" title="Thêm mới">
                        <i class="fas fa-plus"></i>
                    </a>
                </div>
            </div>
            <div class="card-body">
                <form asp-controller="Menu" asp-action="Index">
                    <div class="">
                        @Html.Partial("_IndexPartial")
                    </div>
                </form>
            </div>
        </div>

    </div>
</div>